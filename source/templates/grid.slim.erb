---
image: 'laird.jpg'
caption: 'Laird Hamilton, ladies and gentlemen.'
---

.shortcuts
  .intro-text
    h3= data.grid.send(file_name).page.title
    p.date= data.grid.send(file_name).page.subtitle

.blog-tags
  - if file_name == 'pictures'
    p Albums
  - else
    p Topics
  ul
    - if file_name == 'pictures' || file_name == 'videos'
      - filter_tags_by_album(file_name).each do |album|
        li= album
    - else
      - filter_tags_by_image(file_name).each do |album|
        li= album

.grids
  - data.grid.send(file_name).albums.each do |album|
    - if file_name == 'pictures' || file_name == 'videos'
      article.type-system-traditional data-tag="#{album.title}"
        h1= album.title
        h2= album.caption if album.caption.present?
        h3= album.date
        - album.images.each do |s|
          .grid.show
            = image_tag s.url unless s.url.empty?
            = s.video         unless s.video.empty?
            = s.caption       unless s.caption.empty?
            - if file_name == 'art' || file_name == 'videos'
              .controls= if s.tag.present?
                = s.tag         if s.tag.present?
                '  |
                '
                = link_to 'link', s.url, target: '_blank' if s.url.present?

              / Pages with social: art
              - if file_name == 'art' || file_name == 'videos'
                - if s.social.present?
                  .social-source
                    span As seen on
                    '
                    = link_to s.social.name, s.url, target: '_blank'
    - else
      section
        - album.images.each do |s|
          article data-tag="#{s.tag}"
            .grid.show
              = image_tag s.url unless s.url.empty?
              = s.video         unless s.video.empty?
              = s.caption       unless s.caption.empty?
              .controls= if s.tag.present?
                = s.tag         if s.tag.present?
                '  |
                '
                = link_to 'link', s.url, target: '_blank' if s.url.present?

                / Pages with social: art
                - if file_name == 'art' || 'videos'
                  - if s.social.present?
                    .social-source
                      span As seen on
                      '
                      = link_to s.social.name, s.url, target: '_blank'
